version: '3'
services:
  
  # PHP Service
  gbn-app:
    image: gbn-app
    build:
      context: .
      dockerfile: Dockerfile
    user: www-gbn
    container_name: gbn-app
    tty: true
    environment:
      SERVICE_NAME: app
      SERVICE_TAGS: dev
    working_dir: /var/www
    volumes:
      - ./:/var/www
    networks:
      - gbn-app-network
      
  #Nginx Service
  gbn-webserver:
    image: nginx:alpine
    container_name: gbn-webserver
    tty: true
    ports:
      - "8002:8002"
      - "4452:443"
    volumes:
      - ./:/var/www
      - ./nginx/conf/nginx.conf:/etc/nginx/conf/nginx.conf:ro
      - ./nginx/conf.d/:/etc/nginx/conf.d/:ro
    networks:
      - gbn-app-network

  #PostgreSQL Service
  gbn-db:
    build:
      context: ./debezium-postgres
      dockerfile: Dockerfile
    container_name: gbn-db
    tty: true
    environment:
      POSTGRES_DB: gbn
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: gbn_pass
      SERVICE_TAGS: dev
      SERVICE_NAME: postgresql
    volumes:
      - gbn-dbdata:/var/lib/postgresql/data
    networks:
      - gbn-app-network

#Docker Networks
networks:
  gbn-app-network:
    name: gbn-app-network
    driver: bridge
#Volumes
volumes:
  gbn-dbdata:
    driver: local
  pulse-data:
    driver: local
